{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@onkernel/sdk": "^0.9.1",
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "better-auth": "^1.3.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.2",
    "fastify": "^5.3.3",
    "pg": "^8.14.1",
    "playwright": "^1.54.2",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.2",
    "tsdown": "^0.12.9",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  }
}
